// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:litefs/sqlite.db"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Partnership {
  id          String    @id
  shop        String
  discountId  String?
  title       String
  isActive    Boolean   @default(false)
  usageLimit  Int
  percentOff  Float
  expires     DateTime?
  autoRenew   Boolean   @default(false)
  commission  Float
  codes       Bytes?
  totalSales  Float     @default(0)
  currSales   Float     @default(0)
  webhookId   String?
}